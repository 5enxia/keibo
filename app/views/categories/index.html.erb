<div class="row">
  <%= render 'shared/category_form' %>
</div>


<div class="row">
    <% if @categories.any? %>
      <h3>categories(<%= @categories.count %>)</h3>
      <table class='table'>
      <thead>
        <tr><th scope="col">カテゴリ</th><th scope="col"></th></tr>
      </thead>
      <tbody>
        <%= render partial: 'category', collection: @categories%>
      </tbody>
    </table>
      <%= will_paginate @categories%>
    <% end %>
  </div>
</div>