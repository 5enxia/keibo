<h1>収支一覧</h1>
<% if @user.payments.any? %>
<h3>収支一覧 (<%= @user.payments.count %>)</h3>
<div class="row">
  <table class='table'>
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">カテゴリ</th>
        <th scope="col">収支</th>
        <th scope="col">メモ</th>
        <th scope="col">日時</th>
        <th scope="col"></th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody><%= render @payments %></tbody>
  </table>
  <%= will_paginate @payments %>
<% else %>
  <h3>まだ記録がつけられていません</h3>
<% end %>
</div>